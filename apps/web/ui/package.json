{
  "name": "@viggen/ui",
  "version": "0.1.0",
  "private": true,
  "description": "UI component library for Viggen (Navbar, Hero, Card, Grid, Footer, ContactForm)",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "vitest"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "react-icons": "^4.10.1"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "tslib": "^2.6.0",
    "rimraf": "^3.0.2",
    "eslint": "^8.50.0",
    "vitest": "^1.3.0",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.11"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://example.com/viggen/viggen-holdings-site.git"
  },
  "license": "MIT",
  "author": "Viggen Holdings"
}
